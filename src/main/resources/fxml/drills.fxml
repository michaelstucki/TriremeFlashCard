<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<VBox stylesheets="@../css/styles.css" alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.michaelstucki.triremeflashcards.controller.ControllerDrills">
    <padding>
        <Insets right="200.0" bottom="50.0" left="200.0" />
    </padding>

    <ImageView fitWidth="180" fitHeight="180" preserveRatio="true">
        <Image url="@../images/trireme.png"/>
    </ImageView>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Deck"/>
        <Label fx:id="deckName"/>
    </HBox>

    <VBox alignment="CENTER" spacing="15">
        <padding><Insets topRightBottomLeft="10"/></padding>
        <TextArea fx:id="questionAnswer" prefHeight="500"/>
        <Label fx:id="drillOver"/>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="pass" text="Pass" onAction="#passClick"/>
            <Button fx:id="next" text="Next"/>
            <Button fx:id="fail" text="Fail" onAction="#failClick"/>
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="start" text="Start" onAction="#startClick"/>
            <Button fx:id="stop" text="Stop" onAction="#stopClick"/>
        </HBox>
    </VBox>


    <VBox alignment="CENTER" spacing="5">
        <Hyperlink text="welcome" onAction="#welcomeClick"/>
        <Hyperlink text="decks" onAction="#decksClick"/>
        <Hyperlink text="exit" onAction="#exitClick"/>
    </VBox>
</VBox>
